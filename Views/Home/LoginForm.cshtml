@model UserViewModel

@*Bir form alanı oluşturuluyor. Post metodu kullanılıyor. 
En aşağıda submit butonu bulunuyor.
Error, success, data dönüşleri kullanıcıya gösteriliyor.*@

<form id="myForm" method="post" class="container">
   
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control-range" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control-range" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control-range" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input type="password" class="form-control-range " />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <input type="submit" value=" submit" />
</form>
@Html.Raw(ViewData["message"])



